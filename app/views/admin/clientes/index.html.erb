<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Contato</th>
      <th>Endereço</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.contato %></td>
        <td><%= cliente.endereco %></td>
        <td><%= link_to 'Mostrar', admin_cliente_path(cliente) %></td>
        <td><%= link_to 'Editar', edit_admin_cliente_path(cliente) %></td>
        <td><%= link_to 'Excluir', admin_cliente_path(cliente), method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Cliente', new_admin_cliente_path %>
